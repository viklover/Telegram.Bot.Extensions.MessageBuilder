<Project Sdk="Microsoft.NET.Sdk">

  <PropertyGroup>
    <PackageId>Telegram.Bot.Messages</PackageId>
    <Version>1.0.4</Version>
    <Authors>Mihail Vorobyev</Authors>
    <Description>Simplifies creating messages with text formatting, media attachments, and splitting of long messages to comply with Telegram's limits</Description>
    <PackageLicenseExpression>MIT</PackageLicenseExpression>
    <RepositoryUrl>https://github.com/viklover/Telegram.Bot.Extensions.MessageBuilder</RepositoryUrl>
    <PackageProjectUrl>https://github.com/viklover/Telegram.Bot.Extensions.MessageBuilder</PackageProjectUrl>
    <PackageReadmeFile>README.md</PackageReadmeFile>
    <PackageIcon>logo.png</PackageIcon>
    <TargetFramework>net7.0</TargetFramework>
    <ImplicitUsings>enable</ImplicitUsings>
    <Nullable>enable</Nullable>
    <IsPackable>true</IsPackable>
  </PropertyGroup>

  <ItemGroup>
    <PackageReference Include="Telegram.Bot" Version="22.7.2" />
  </ItemGroup>

  <ItemGroup>
    <None Include="..\README.md" Pack="true" PackagePath="\" />
    <None Include="logo.png" Pack="true" PackagePath="\" />
    <None Include="screenshot.png" Pack="true" PackagePath="\" />
  </ItemGroup>

</Project>
